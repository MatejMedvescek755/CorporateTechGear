@model web.Models.Cart
@using Microsoft.AspNetCore.Identity

@inject UserManager<web.Models.ApplicationUser> UserManager
@{
    ViewData["Title"] = "Create";
    string name = TempData["item"] as string;
    string product_id = TempData["id"] as string;
    if(product_id == null)
    {
        product_id = "error";
    }
    string product_price = TempData["price"] as string;
    if(product_price == null)
    {
        product_price = "200";
    }
}



<h1>Create</h1>

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="user_id" class="control-label"></label>
                <input asp-for="user_id" class="form-control" value="@UserManager.GetUserId(User)" readonly />
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="total" class="control-label"></label>
                <input asp-for="total" class="form-control" value="@product_price" readonly/>
                <span asp-validation-for="total" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="product_id" class="control-label"></label>
                <input asp-for="product_id" class="form-control" value="@product_id" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="product_name" class="control-label"></label>
                <input asp-for="product_name" class="form-control" value="@name" readonly/>
            </div>
            <div class="form-group">
                <input type="submit" value="Add to Cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


</script>
</div>
